{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node", "react"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,

    /* Additional strict checks for better code quality */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
    /* Note: noUnusedLocals and noUnusedParameters disabled temporarily */
    /* They can be re-enabled once all unused variables are cleaned up */
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
